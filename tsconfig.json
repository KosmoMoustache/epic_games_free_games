// https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
{
  "files": [
    "global.d.ts"
  ],
  "include": [
    "./",
    "./src/**/*"
  ],
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "types": [
      "node"
    ],
    "outDir": "dist",
    "newLine": "crlf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}